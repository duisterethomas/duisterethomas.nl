---
import { socialLinks } from "./SocialLinks";
import Logo from "../images/Duisterethomas-Logo.svg";
import Social from "./Social.astro";

/** Main menu items */
const textLinks: { label: string; href: string }[] = [
    { label: "Home", href: "/" },
    { label: "Gear", href: "/gear" },
];

/** Icon links to social media */
const iconLinks: {
    label: string;
    href: string;
    icon: string;
    color: string;
}[] = [
    socialLinks["youtube"],
    socialLinks["soundcloud"],
    socialLinks["modrinth"],
    socialLinks["github"],
    socialLinks["itchio"],
    socialLinks["gamejolt"],
    socialLinks["twitch"],
    socialLinks["reddit"],
];

/** Test if a link is pointing to the current page. */
const isCurrentPage = (href: string) => {
    let pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, "");
    if (pathname.at(0) !== "/") pathname = "/" + pathname;
    if (pathname.at(-1) !== "/") pathname += "/";
    return pathname === href || (href !== "/" && pathname.startsWith(href));
};
---

<header class="pointer-events-none absolute md:fixed z-9999 mb-14 grid w-full items-center gap-4 px-12 py-8 font-medium md:grid-cols-[1fr_auto_1fr]">
    <a
        href="/"
        class="flex items-center gap-2 justify-self-center md:justify-self-start"
    >
        <Logo
            width="100"
            height="100"
        />
    </a>
    <nav class="nav-items m-0 flex w-fit list-none gap-1.5 justify-self-center rounded-full p-2 text-sm leading-[1.2] bg-blend-overlay backdrop-blur-xl text-shadow-none">
        {
            textLinks.map(({ label, href }) => (
                <li>
                    <a
                        aria-current={isCurrentPage(href) ? "page" : null}
                        class="link hover:bg-accent-overlay focus:bg-accent-overlay inline-block rounded-full px-3.5 py-2.5 text-gray-300 hover:text-gray-100 focus:text-gray-100"
                        href={href}
                    >
                        {label}
                    </a>
                </li>
            ))
        }
    </nav>
    <div class="socials relative flex flex-row flex-nowrap justify-between justify-self-center rounded-full px-2 py-1 text-xl backdrop-blur-xl md:justify-self-end">
        {
            iconLinks.map(({ href, icon, label, color }) => (
                <Social href={href} icon={icon} label={label} color={color} />
            ))
        }
    </div>
</header>

<style>
    @reference "../styles/global.css";

    .nav-items,
    .socials {
        background: url("/assets/backgrounds/noise.png") top center/220px repeat;
        background-color: #00000080;
        box-shadow: 0px 0px 4px #5d5d5d;
    }

    .link[aria-current="page"] {
        @apply bg-accent-regular text-white;
    }

    .link[aria-current] {
        @apply text-white;
    }
</style>
