---
import type { HTMLAttributes } from "astro/types";

interface Props {
    icon: string;
    color?: string;
    size?: string;
}

const { color = "currentcolor", icon, size } = Astro.props;

const attrs: HTMLAttributes<"svg"> = {};
if (size) attrs.style = { "--size": size };
---

<svg
    class="align-middle"
    xmlns="http://www.w3.org/2000/svg"
    width="40"
    height="40"
    viewBox="0 0 256 256"
    aria-hidden="true"
    stroke={color}
    fill={color}
    {...attrs}
>
    <g set:html={icon} />
</svg>

<style>
    svg {
        width: var(--size, 1em);
        height: var(--size, 1em);
    }
</style>
