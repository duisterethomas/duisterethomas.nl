---
import Icon from "./Icon.astro";

interface Props {
    href: string;
    newtab?: boolean;
    color?: string;
    icon?: string;
}

const {
    href,
    newtab,
    color = "var(--color-accent-regular)",
    icon,
} = Astro.props;
---

<a
    class="relative flex w-fit content-center overflow-hidden rounded-full px-13 py-3 text-center text-2xl whitespace-nowrap text-white shadow-md inset-ring-0 shadow-gray-800 text-shadow-none hover:inset-ring-6 hover:shadow-gray-600 focus:inset-ring-6 focus:shadow-gray-600 active:shadow-none active:inset-ring-2"
    href={href}
    target={newtab ? "_blank" : ""}
>
    {
        icon && (
            <div class="m-auto mr-2">
                <Icon icon={icon} />
            </div>
        )
    }
    <slot />
</a>

<style define:vars={{ color }}>
    a {
        background: var(--color);
    }
</style>
