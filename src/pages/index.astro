---
// Import the layout
import BaseLayout from '../layouts/BaseLayout.astro';

// Import components
import { YouTube } from '@astro-community/astro-embed-youtube';

import { socialLinks } from '../components/SocialLinks';
import LinkButton from '../components/LinkButton.astro'
---

<BaseLayout>
	<div id="section-1">
		<div class="wrapper">

			<div class="hero">
				<div class="stack gap-2">
					<h1 class="title">Hej, dit is niet de IKEA</h1>
					<p>Dit is namelijk <a href="https://duisterethomas.nl">duisterethomas.nl</a></p>
				</div>
			</div>

		</div>
	</div>

	<div id="section-2">
		<div class="wrapper">
			<YouTube class="youtube" id="https://www.youtube.com/watch?v=bVWIpXIUsLI" posterQuality="max" />
			<div id="yt-details">
				<h4>Mijn meest recente YouTube video</h4>
				<div id="yt-button"><LinkButton href={socialLinks["youtube"]["href"]} newtab color={socialLinks["youtube"]["color"]} icon={socialLinks["youtube"]["icon"]}>Abonneer</LinkButton></div>
			</div>
		</div>
	</div>
</BaseLayout>

<style>
	#section-1 {
		padding-top: 17rem;
		padding-bottom: 15rem;
		background: url('/assets/backgrounds/background-1.jpg') center center;
		background-size: cover;
	}

	.hero {
		font-size: var(--text-xl);
		text-align: start;
		display: grid;
		gap: 3.75rem;
		grid-template-columns: 6fr 4fr;
		padding-inline: 2.5rem;
	}

	.title {
		font-size: var(--text-5xl);
		color: var(--gray-0);
	}

	/* ====================================================== */

	#section-2 {
		padding-top: 10rem;
		padding-bottom: 10rem;
		background: url('/assets/backgrounds/background-2.jpg') center center;
		background-size: cover;
	}

	.youtube {
		border-radius: 1rem;
		min-width: 100%;
	}

	#yt-details {
		margin-top: 1.2rem;
		display: grid;
		grid-template-columns: auto auto;
		align-items: center;
	}

	#yt-button {
		justify-self: end;
	}
</style>
