---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
	<div id="section-1">
		<div class="wrapper">

			<div class="hero">
				<div class="stack gap-2">
					<h1 class="title">Hej, dit is niet de IKEA</h1>
					<p>Dit is namelijk <a href="https://duisterethomas.nl">duisterethomas.nl</a></p>
				</div>
			</div>

		</div>
	</div>

	<div id="section-2">
		<div class="wrapper">

		</div>
	</div>
</BaseLayout>

<style>
	#section-1 {
		padding-top: 17rem;
		padding-bottom: 15rem;
		background: url('/assets/backgrounds/background-1.jpg') center center;
		background-size: cover;
	}

	.hero {
		font-size: var(--text-xl);
		text-align: start;
		display: grid;
		gap: 3.75rem;
		grid-template-columns: 6fr 4fr;
		padding-inline: 2.5rem;
	}

	.title {
		font-size: var(--text-5xl);
		color: var(--gray-0);
	}

	/* ====================================================== */

	#section-2 {
		padding-top: 10rem;
		padding-bottom: 10rem;
		background: url('/assets/backgrounds/background-1.jpg') center center;
		background-size: cover;
	}
</style>
