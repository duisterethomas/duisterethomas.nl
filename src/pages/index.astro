---
// Import the layout
import BaseLayout from "../layouts/BaseLayout.astro";

// Import components
import { YouTube } from "@astro-community/astro-embed-youtube";

import { socialLinks } from "../components/SocialLinks";
import LinkButton from "../components/LinkButton.astro";
---

<BaseLayout>
    <div class="pt-72 pb-60" id="section-top">
        <div class="wrapper">
            <div class="grid max-w-2xl gap-14 px-10 text-start text-xl">
                <div class="flex flex-col gap-2">
                    <h1>Hej, this is not IKEA</h1>
                    <p>
                        Because this is <a href="https://duisterethomas.nl"
                            >duisterethomas.nl</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="py-40" id="section-youtube">
        <div class="wrapper">
            <YouTube
                class="min-w-full rounded-2xl shadow-md shadow-gray-800"
                id="https://www.youtube.com/watch?v=wH7tWqcRruw"
                posterQuality="max"
            />
            <div class="mt-4 grid grid-cols-2 items-center">
                <h4>My most recent YouTube video</h4>
                <div class="justify-self-end">
                    <LinkButton
                        href={socialLinks["youtube"]["href"]}
                        newtab
                        color={socialLinks["youtube"]["color"]}
                        icon={socialLinks["youtube"]["icon"]}
                        >Subscribe</LinkButton>
                </div>
            </div>
        </div>
    </div>

    <div class="py-32" id="section-music">
        <div class="wrapper">
            <div class="grid grid-cols-2 items-center gap-14 px-10 text-start text-xl">
                <div class="flex flex-col gap-2">
                    <h1>My music</h1>
                    <p>
                        I often use my own music as background tracks in my <a
                            href={socialLinks["youtube"]["href"]}
                            >YouTube videos</a>.
                    </p>
                    <LinkButton
                        href={socialLinks["soundcloud"]["href"]}
                        newtab
                        color={socialLinks["soundcloud"]["color"]}
                        icon={socialLinks["soundcloud"]["icon"]}
                        >More music</LinkButton
                    >
                </div>

                <div class="flex flex-col gap-1">
                    <iframe
                        width="100%"
                        height="166"
                        scrolling="no"
                        frameborder="no"
                        allow="autoplay"
                        src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/1987020695&color=%23ff5500&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true"
                    ></iframe><div
                        style="font-size: 10px; color: #cccccc;line-break: anywhere;word-break: normal;overflow: hidden;white-space: nowrap;text-overflow: ellipsis; font-family: Interstate,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Garuda,Verdana,Tahoma,sans-serif;font-weight: 100;"
                    >
                        <a
                            href="https://soundcloud.com/user-149794833"
                            title="Duisterethomas"
                            target="_blank"
                            style="color: #cccccc; text-decoration: none;"
                            >Duisterethomas</a
                        > · <a
                            href="https://soundcloud.com/user-149794833/path-to-the-future"
                            title="Path to the Future"
                            target="_blank"
                            style="color: #cccccc; text-decoration: none;"
                            >Path to the Future</a>
                    </div>
                    <iframe
                        width="100%"
                        height="166"
                        scrolling="no"
                        frameborder="no"
                        allow="autoplay"
                        src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/1933724864&color=%23ff5500&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true"
                    ></iframe><div
                        style="font-size: 10px; color: #cccccc;line-break: anywhere;word-break: normal;overflow: hidden;white-space: nowrap;text-overflow: ellipsis; font-family: Interstate,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Garuda,Verdana,Tahoma,sans-serif;font-weight: 100;"
                    >
                        <a
                            href="https://soundcloud.com/user-149794833"
                            title="Duisterethomas"
                            target="_blank"
                            style="color: #cccccc; text-decoration: none;"
                            >Duisterethomas</a
                        > · <a
                            href="https://soundcloud.com/user-149794833/futuristic-vibes"
                            title="Futuristic Vibes"
                            target="_blank"
                            style="color: #cccccc; text-decoration: none;"
                            >Futuristic Vibes</a>
                    </div>
                    <iframe
                        width="100%"
                        height="166"
                        scrolling="no"
                        frameborder="no"
                        allow="autoplay"
                        src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/1843120572&color=%23ff5500&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true"
                    ></iframe><div
                        style="font-size: 10px; color: #cccccc;line-break: anywhere;word-break: normal;overflow: hidden;white-space: nowrap;text-overflow: ellipsis; font-family: Interstate,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Garuda,Verdana,Tahoma,sans-serif;font-weight: 100;"
                    >
                        <a
                            href="https://soundcloud.com/user-149794833"
                            title="Duisterethomas"
                            target="_blank"
                            style="color: #cccccc; text-decoration: none;"
                            >Duisterethomas</a
                        > · <a
                            href="https://soundcloud.com/user-149794833/rulers-rule"
                            title="Rulers Rule"
                            target="_blank"
                            style="color: #cccccc; text-decoration: none;"
                            >Rulers Rule</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="py-40" id="section-mod">
        <div class="wrapper justify-center">
            <div class="m-auto max-w-4xl items-center gap-14 px-10 text-center text-xl">
                <div class="flex flex-col gap-2">
                    <h1>Pancake Mod</h1>
                    <p>
                        I've made a Minecraft mod, a very essential mod:
                        the <a href="https://modrinth.com/mod/pancakemod"
                            >Pancake Mod</a>
                        . It is a mod that adds Dutch Pancakes to Minecraft,
                        who doesn't want that?
                    </p>
                    <div class="mt-2 self-center">
                        <LinkButton
                            href={socialLinks["modrinth"]["href"]}
                            newtab
                            color={socialLinks["modrinth"]["color"]}
                            icon={socialLinks["modrinth"]["icon"]}
                            >My mods</LinkButton>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="py-40" id="section-github">
        <div class="wrapper">
            <div class="items-center gap-14 px-10 text-center text-xl">
                <div class="flex w-full justify-center">
                    <div class="flex max-w-2xl flex-col gap-2">
                        <h1>Coding</h1>
                        <p>
                            Yes, this is also a hobby of mine. I've coded this
                            website myself for example.
                        </p>
                    </div>
                </div>
                <div class="mt-12 grid grid-rows-3 gap-8 lg:grid-cols-3 lg:grid-rows-1">
                    <div class="flex flex-col justify-center rounded-3xl bg-black px-9 py-12 text-center outline-1 outline-neutral-700">
                        <h4>duisterethomas.nl</h4>
                        <p>The source code of this website.</p>
                        <div class="mt-2 self-center">
                            <LinkButton
                                href="https://github.com/duisterethomas/duisterethomas.nl"
                                newtab
                                color="#181717"
                                icon={socialLinks["github"]["icon"]}
                                >GitHub repo</LinkButton>
                        </div>
                    </div>

                    <div class="flex flex-col justify-center rounded-3xl bg-black px-9 py-12 text-center outline-1 outline-neutral-700">
                        <h4>Rooster-EPD</h4>
                        <p>
                            A small e-Paper device that shows your Zermelo
                            schedule.
                        </p>
                        <div class="mt-2 self-center">
                            <LinkButton
                                href="https://github.com/duisterethomas/rooster-epd"
                                newtab
                                color="#181717"
                                icon={socialLinks["github"]["icon"]}
                                >GitHub repo</LinkButton>
                        </div>
                    </div>

                    <div class="flex flex-col justify-center rounded-3xl bg-black px-9 py-12 text-center outline-1 outline-neutral-700">
                        <h4>More...</h4>
                        <p>View all my repositories on GitHub.</p>
                        <div class="mt-2 self-center">
                            <LinkButton
                                href={socialLinks["github"]["href"]}
                                newtab
                                color="#181717"
                                icon={socialLinks["github"]["icon"]}
                                >GitHub</LinkButton>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="py-60" id="section-games">
        <div class="wrapper">
            <div class="grid grid-rows-2 gap-14 px-10 text-start text-xl xl:grid-cols-2 xl:grid-rows-1">
                <div class="flex flex-col gap-2 text-center xl:text-start">
                    <h1 id="fnatc-title">Five Nights at the Cafe</h1>
                    <p>
                        This is a Five Nights at Freddy's fangame that I've
                        made.
                    </p>
                    <div class="mt-2 flex gap-4 self-center xl:self-auto">
                        <div>
                            <LinkButton
                                href={socialLinks["gamejolt"]["href"]}
                                newtab
                                color="#2f7f6f"
                                icon={socialLinks["gamejolt"]["icon"]}
                                >Game Jolt</LinkButton>
                        </div>

                        <div>
                            <LinkButton
                                href={socialLinks["itchio"]["href"]}
                                newtab
                                color={socialLinks["itchio"]["color"]}
                                icon={socialLinks["itchio"]["icon"]}
                                >Itch.io</LinkButton>
                        </div>
                    </div>
                </div>

                <div class="place-self-center">
                    <iframe
                        src="https://widgets.gamejolt.com/package/v1?key=5x7FBTjB"
                        width="500"
                        height="245"></iframe>
                </div>
            </div>
        </div>
    </div>

    <div class="py-20">
        <div class="wrapper">
            <div class="gap-14 px-10 text-center text-xl">
                <p>
                    P.S. my merch is not for sale.<br />Would you still like
                    some? Then send an e-mail to <a
                        href="mailto:iwantmerch@duisterethomas.nl"
                        >iwantmerch@duisterethomas.nl</a
                    > and you still won't get it.
                </p>
            </div>
        </div>
    </div>
</BaseLayout>

<style>
    #section-top {
        background: url("/assets/backgrounds/background-1.jpg") center center;
        background-size: cover;
    }

    #section-youtube {
        background: url("/assets/backgrounds/background-2.jpg") center center;
        background-size: cover;
    }

    #section-music {
        background: url("/assets/backgrounds/Ableton-live-it-doesnt-end-here.webp")
            center center;
        background-size: cover;
    }

    #section-mod {
        background: url("/assets/backgrounds/Pancake-Mod.webp") center center;
        background-size: cover;
    }

    #section-github {
        background: url("/assets/backgrounds/GitHub-Rooster-EPD.webp") top
            center;
        background-size: cover;
    }

    #section-games {
        background: url("/assets/backgrounds/fnatc.png") center center;
        background-size: cover;
    }

    #fnatc-title {
        font-family: "Big Shoulders Stencil", sans-serif;
        font-optical-sizing: auto;
        font-weight: 300;
        font-style: normal;
    }
</style>
